<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="horizontal" 
    android:background="@color/app_orange" 
    android:paddingLeft="@dimen/storage_margin" 
    android:layout_width="fill_parent" 
    android:layout_height="@dimen/bottom_navbar_height" 
    android:weightSum="5.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:id="@id/activity_choose_goods_linGoCart" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:weightSum="3.0" 
        android:layout_weight="3.0">
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0" 
            android:layout_centerVertical="true">
            <ImageView 
                android:background="@drawable/ic_cart_show" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="@dimen/storage_margin" 
                android:contentDescription="@null" />
            <ImageView 
                android:background="@drawable/ic_cart" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:contentDescription="@null" />
        </LinearLayout>
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:id="@id/layout_sales_cart_totalmoney" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:layout_weight="2.0" 
            android:layout_centerInParent="true">
            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/total_money" 
                style="@style/middle_white_text" />
            <TextView 
                android:id="@id/activity_choose_goods_txtMoney" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/storage_little_margin" 
                android:text="0" style="@style/middle_white_text" />
            <ImageView 
                android:background="@drawable/cart_white_vertical_bar" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_margin="@dimen/storage_little_margin" 
                android:contentDescription="@null" />
            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/total_amount" 
                style="@style/middle_white_text" />
            <TextView 
                android:id="@id/activity_choose_goods_txtAmount" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/storage_little_margin" 
                android:text="0" style="@style/middle_white_text" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:gravity="center" 
        android:orientation="horizontal" 
        android:id="@id/ll_aty_cart_pay_item" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:weightSum="2.0" 
        android:layout_weight="2.0">
        <Button 
            android:id="@id/btn_aty_sales_make_bill" 
            android:background="@drawable/corners_border_grey_bg" 
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent" 
            android:layout_margin="@dimen/storage_little_margin" 
            android:text="@string/make_bill" 
            android:layout_weight="1.0" 
            style="@style/nomal_orange_text" />
        <Button 
            android:id="@id/btn_aty_sales_receive_pay" 
            android:background="@drawable/corners_border_grey_bg" 
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent" 
            android:layout_margin="@dimen/storage_little_margin" 
            android:text="@string/receive_pay" 
            android:layout_weight="1.0" 
            style="@style/nomal_blue_text" />
        <ImageView 
            android:id="@id/activity_choose_goods_imgFinish" 
            android:background="@drawable/ic_cart_finish" 
            android:visibility="gone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:adjustViewBounds="true" 
            android:contentDescription="@null" />
    </LinearLayout>
</LinearLayout>
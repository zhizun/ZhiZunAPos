<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grays_backgroud"
    android:orientation="vertical" >

    <com.ch.epw.view.TitleBarView
        android:id="@+id/title_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_setting_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/title_bar_setting"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="帐号设置"
        android:textColor="@color/progressbar_app"
        android:textSize="@dimen/title_leveltwo_text_size_18"/>

    <LinearLayout
        android:id="@+id/ll_setting_zhsz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_setting_title"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <RelativeLayout
            android:id="@+id/rl_setting_password_manager"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_yh_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="密码管理"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </RelativeLayout>

        <View
            android:id="@+id/category_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/grays_divider" />

        <RelativeLayout
            android:id="@+id/rl_setting_bindphone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_myepei_arrow_version"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_yh_list_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />

            <TextView
                android:id="@+id/tv_setting_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_myepei_arrow_version"
                android:text=""
                android:textColor="@color/gray_font"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/grays_divider"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_registration_navigation_schoolmaster"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="邮箱"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ll_setting_title_two"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ll_setting_zhsz"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="提醒和通知"
        android:textColor="@color/progressbar_app"
        android:textSize="@dimen/title_leveltwo_text_size_18" />

    <LinearLayout
        android:id="@+id/ll_setting_txtz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_setting_title_two"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <RelativeLayout
            android:id="@+id/rl_setting_receviemsg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_yh_list_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="接收新消息通知"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />

            <com.ch.epw.view.SwitchButton
                android:id="@+id/sb_setting_receviemsg"
                style="@style/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="true" />
        </RelativeLayout>

        <View
            android:id="@+id/category_line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/grays_divider"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_registration_navigation_techer2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_myepei_arrow_version1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_yh_list_title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="家校互动"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/grays_divider"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_registration_navigation_schoolmaster2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="系统消息"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_setting_txtz"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_button"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="@dimen/title_leveltwo_text_size_18" >
    </Button>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

   <com.ch.epw.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/ll_my_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:divider="@null"
        android:clickable="true" />
   <LinearLayout 
        android:id="@+id/ll_bottom_huifu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/common_title"
        >
    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_edittext"
            >
        	<EditText
            	android:id="@+id/et_list_mymessage_send_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:textSize="@dimen/title_levelfour_text_size_15"
	            android:textColorHint="#a9a9a9"
	            android:padding="8dp"
	            android:textColor="@color/black"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="用着不爽，说两句"
	            android:textCursorDrawable="@null"/>

        	<Button
            	android:id="@+id/btn_list_my_message_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rounded_edittext"
	            android:padding="9dp"
	            android:layout_gravity="right|center_vertical"
	            android:text="发送"
	            android:layout_weight="0"
	            android:textColor="@color/button_sent"  >
        </Button>
        </LinearLayout>
	</LinearLayout>
</RelativeLayout>

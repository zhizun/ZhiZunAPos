<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_my_noticereceivebox_detail_bottom_bar_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_rolepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_rolename"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_rolename"
            android:src="@drawable/share_gray" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_rolename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分享"
            android:textSize="@dimen/title_leveltwo_text_size_18" />
    </RelativeLayout>

    <View
        android:id="@+id/v_notice_receivebox_detail_title_divider2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/grays_divider" >
    </View>

    <RelativeLayout
        android:id="@+id/rl_my_noticereceivebox_detail_sendnotice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_classpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_classname"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_classname"
            android:src="@drawable/send_notice_gray" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发通知"
            android:textSize="@dimen/title_leveltwo_text_size_18" />
    </RelativeLayout>

    <View
        android:id="@+id/v_notice_receivebox_detail_title_divider3"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/grays_divider" >
    </View>

    <RelativeLayout
        android:id="@+id/rl_my_noticereceivebox_detail_deletenotice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_classpic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_classname2"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_classname2"
            android:src="@drawable/delete_gray_3x" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_classname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="删除"
            android:textSize="@dimen/title_leveltwo_text_size_18" />
    </RelativeLayout>

</LinearLayout>
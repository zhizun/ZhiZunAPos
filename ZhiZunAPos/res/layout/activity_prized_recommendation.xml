<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <com.ch.epw.view.TitleBarView
        android:id="@+id/title_bar_activity_prized_partic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView 
        android:id="@+id/tv_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        />
	 <LinearLayout 
	     android:id="@+id/lb_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp"
	        android:padding="10dp"
	        android:paddingLeft="25dp"
	        android:background="@color/white"
	        android:visibility="gone"
	        >
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="推荐时间" 
			    android:textSize="16dp"/>
	
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dp"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="领取次数"
			    android:textSize="16dp" />
	
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="成交次数"
			    android:textSize="16dp"
		    />
		</LinearLayout>
		<LinearLayout 
	     android:id="@+id/lb_youhui"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp"
	        android:padding="10dp"
	        android:paddingLeft="25dp"
	        android:background="@color/white"
	        android:visibility="gone"
	        >
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="领取时间"
			    android:textSize="16dp" />
	
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dp"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="验证码" 
			    android:textSize="16dp"/>
	
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="是否验证"
			    android:textSize="16dp"
		    />
		</LinearLayout>
		<View
		android:id="@+id/view_f"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/grays_divider"
        android:visibility="gone"/>
    <com.ch.epw.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/lv_prized_partic_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableRow>

        <RelativeLayout
            android:id="@+id/rl_activity_navigation_teacher_jtzy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical|right" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/bg_pink_divider" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_pink_divider" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:background="@color/bg_pink_divider" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/bg_pink_divider" />

            <TextView
                android:id="@+id/tv_list_star_listview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="综合评分："
                android:textColor="@color/black"
                android:textSize="@dimen/title_levelthree_text_size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_pink_divider" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/bg_pink_divider" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:background="@color/bg_pink_divider" />

            <RatingBar
                android:id="@+id/rb_list_star_listview_item_ratingbar"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1" />
        </RelativeLayout>
    </TableRow>

</TableLayout>
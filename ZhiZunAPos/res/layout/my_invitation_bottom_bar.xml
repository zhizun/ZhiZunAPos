<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_my_invitation_bottom_bar"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" 
    android:layout_alignParentBottom="true"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" 
        android:id="@+id/rl_my_invitation_bottom_bar_yes"
        >

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_rolepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_rolename"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_rolename"
            android:src="@drawable/my_invitation_yes" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_rolename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="接受"
            android:textSize="@dimen/title_leveltwo_text_size_18" />

    </RelativeLayout>
  <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" 
        android:id="@+id/rl_my_invitation_bottom_bar_no">

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_classpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_classname"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_classname"
            android:src="@drawable/my_invitation_no" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="拒绝"
            android:textSize="@dimen/title_leveltwo_text_size_18" />

    </RelativeLayout>
</LinearLayout>
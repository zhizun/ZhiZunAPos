<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_eeeeee"
    android:orientation="vertical" >

    <com.ch.epw.view.TitleBarView
        android:id="@+id/title_bar_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_yh_list_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="请输入您注册时候的手机号码："
        android:textColor="@color/grays_forgetpassword_font"
        android:textSize="@dimen/title_levelthree_text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_yh_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国+86"
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />

            <View
                android:id="@+id/category_line"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/grays_divider" />

            <EditText
                android:id="@+id/et_forget_passrword_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号码"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_nexe_submit_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_forgetpassword_button"
        android:text="下一步"
        android:textColor="@color/grays_forgetpassword_font"
        android:textSize="@dimen/title_leveltwo_text_size_18" />

    <Button
        android:id="@+id/btn_next_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_button"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/title_leveltwo_text_size_18"
        android:visibility="gone" />

</LinearLayout>
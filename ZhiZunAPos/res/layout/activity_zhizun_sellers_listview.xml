<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
     >
    <RelativeLayout 
        android:id="@+id/title_lingshou"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/title_zhizun"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/image_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui_zhizun"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            />
        <LinearLayout 
            android:id="@+id/ll_menu_xiala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
	        <TextView 
	            android:id="@+id/title_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="零售"
	            android:textColor="@color/white"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/zhizun_xiala"
	            android:layout_gravity="center"
	            android:padding="5dp"
	            />
	        </LinearLayout>
	        <ImageView 
	          	android:id="@+id/im_saomiao"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/sm_zhizun"
	            android:padding="10dp"
	            android:layout_toLeftOf="@+id/im_xinjianshangpin"
            />
	        <ImageView 
	            android:id="@+id/im_xinjianshangpin"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/zhizun_tianjia"
	            android:layout_alignParentRight="true"
	            android:padding="10dp"
	            />
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal"
	    android:layout_below="@+id/title_lingshou"
	    android:layout_above="@+id/bottom_above"
	    >
	    <com.zhizun.pos.main.listview.MyListView
	        android:id="@+id/listView"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="#e4e3de"
	        android:choiceMode="singleChoice"
	        android:listSelector="@color/white"
	        android:scrollbars="none" >
	    </com.zhizun.pos.main.listview.MyListView>
	
	    <com.zhizun.pos.main.listview.MyListView
	        android:id="@+id/subListView"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.5"
	        android:background="@color/white" >
	    </com.zhizun.pos.main.listview.MyListView>
	</LinearLayout>
			<LinearLayout 
			    android:id="@+id/bottom_above"
       		     android:layout_width="fill_parent"
       		     android:layout_height="wrap_content"
       		     android:orientation="horizontal"
       		     android:gravity="center"
       		     android:background="@color/huodong_text"
       		     android:padding="10dp"
       		     android:layout_alignParentBottom="true"
       		     >
       		     <TextView 
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="总金额"
       		         android:textColor="@color/white"
       		         />
       		     <TextView 
       		         android:id="@+id/tv_shifujine"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="14000"
       		         android:textColor="@color/white"
       		         />
       		     <View 
       		         android:layout_width="1dp"
       		         android:layout_height="fill_parent"
       		         android:background="@color/white"
       		         android:layout_marginLeft="10dp"
       		         android:layout_marginRight="10dp"
       		         />
       		     <TextView 
       		         android:id="@+id/tv_yingfujine"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="总数量"
       		         android:textColor="@color/white"
       		         />
       		     <TextView 
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="14000"
       		         android:textColor="@color/white"
       		         />
       		     <Button 
       		         android:id="@+id/bt_Billing"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="开单"
       		         android:background="@color/white"
       		         android:padding="5dp"
       		         android:layout_marginLeft="10dp"
       		         />
       		     <Button 
       		         android:id="@+id/collect_money"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="收钱"
       		         android:background="@color/white"
       		         android:padding="5dp"
       		         android:layout_marginLeft="10dp"
       		         />
       		 </LinearLayout>
</RelativeLayout>

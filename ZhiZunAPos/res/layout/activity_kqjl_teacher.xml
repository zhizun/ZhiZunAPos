<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.ch.epw.view.TitleBarView
        android:id="@+id/title_bar_activity_zxdt_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_my_notice_teacher_menu"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_below="@+id/title_bar_activity_zxdt_teacher"
        android:background="@color/simple_eeeeee"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_my_attence_teacher_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/time_left" />

        <ImageView
            android:id="@+id/iv_my_attence_teacher_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/time_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_my_attence_teacher_texttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />

            <TextView
                android:id="@+id/tv_my_attence_teacher_textweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/title_leveltwo_text_size_18" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/ll_activity_kqjl_teacher"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_my_notice_teacher_menu"
        android:clickable="true"
        android:divider="@color/grays_divider"
        android:dividerHeight="1dp"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:id="@+id/ll_no_items_listed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nocontent" >
        </ImageView>

        <TextView
            android:id="@+id/no_data_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="暂无内容"
            android:textColor="@color/gray_font"
            android:textSize="@dimen/title_levelone_text_size_20" />
    </LinearLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_list_common_title_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_photo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="71dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
             >

            <TextView
                android:id="@+id/tv_list_common_title_orgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_list_common_title_time"
                android:text="来自幼艺钢琴中心来自幼艺钢琴中心"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/title_levelfour_text_size_14" />

            <TextView
                android:id="@+id/tv_list_common_title_time"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="2015-02-13"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/title_levelfour_text_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_list_common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:lineSpacingMultiplier="1.2"
                android:text="春季艺术风暴第二波！！学员老带新送200元代金券！春季艺术风暴第二波"
                android:textColor="@color/black"
                android:textSize="@dimen/title_levelthree_text_size_16" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
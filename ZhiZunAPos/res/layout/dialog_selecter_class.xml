<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/il_dialog_selecter_class_title"
        layout="@layout/dialog_selecter_class_title" />

    <ListView
        android:id="@+id/ll_dialog_selecter_class_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:divider="@null"
        android:layout_below="@+id/il_dialog_selecter_class_title" >
    </ListView>

    <EditText
        android:id="@+id/et_dialog_selecter_class_note"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/ll_dialog_selecter_class_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="请输入备注"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="#a9a9a9"
        android:textSize="@dimen/title_levelthree_text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_dialog_selecter_class_note"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/btn_dialog_selectstudent_yes"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/title_levelthree_text_size_16" >
        </Button>

        <Button
            android:id="@+id/btn_dialog_selectstudent_no"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/gray_font"
            android:textSize="@dimen/title_levelthree_text_size_16" >
        </Button>
    </LinearLayout>

</RelativeLayout>
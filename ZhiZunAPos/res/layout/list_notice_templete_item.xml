<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_list_notice_templete_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title_levelthree_text_size_16" >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/btn_list_notice_templete_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btn_list_notice_templete_send"
            android:background="@drawable/bg_getidentifyingcode_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/favorite_btn_delete"
            android:textColor="@color/black"
            android:textSize="@dimen/title_levelthree_text_size_16" />

        <Button
            android:id="@+id/btn_list_notice_templete_send"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_invitation_button_agree"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/text_select"
            android:textColor="@color/black"
            android:textSize="@dimen/title_levelthree_text_size_16" />
    </RelativeLayout>

</LinearLayout>
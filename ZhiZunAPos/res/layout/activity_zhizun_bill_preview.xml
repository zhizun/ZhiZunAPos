                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日期" />

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

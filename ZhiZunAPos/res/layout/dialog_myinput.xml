<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_selectstudent_button"
    android:paddingBottom="10dp" >

    <EditText
        android:id="@+id/et_dialog_myinput_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_myinput_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLength="10"
        android:background="@drawable/bg_selectstudent_button"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/title_leveltwo_text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_dialog_myinput_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_dialog_selectstudent_yes"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_selectstudent_button"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/title_levelthree_text_size_16" >
        </Button>

        <Button
            android:id="@+id/btn_dialog_selectstudent_no"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_selectstudent_button"
            android:text="取消"
            android:textColor="@color/gray_font"
            android:textSize="@dimen/title_levelthree_text_size_16" >
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_myinput_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="编辑姓名"
        android:textColor="@color/black"
        android:textSize="@dimen/title_leveltwo_text_size_18" />

</RelativeLayout>
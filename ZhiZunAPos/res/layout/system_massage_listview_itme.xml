<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/rl_course_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >
        <TextView 
            android:id="@+id/tv_badgeview"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text=""
            />
            <LinearLayout
                android:layout_toRightOf="@+id/tv_badgeview"
                android:id="@+id/lv_content_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
		                <TextView
		                    android:id="@+id/tv_message_content"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentLeft="true"
		                    android:ellipsize="end"
                    		android:lines="1"
                    		android:layout_toLeftOf="@+id/tv_message_time"
		                    android:text="今天益培网将进行系统更新今天益培网将进行系统更新"
		                    android:enabled="true"
		                    android:layout_marginRight="10dp"
		                    android:textSize="@dimen/title_levelthree_text_size_16" />
		                <TextView
		                    android:id="@+id/tv_message_time"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="12:00"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginRight="10dp"
		                    android:textColor="@color/gray_font"
		                    android:textSize="@dimen/title_levelfour_text_size_14" />
					</RelativeLayout>
                <TextView
                    android:id="@+id/tv_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="2"
                    android:paddingBottom="5dp"
                    android:ellipsize="end"
                    android:text="今天益培网将进行系统更新今天益培网将进行系统更新今天益培网将进行系统更新今天益培网将进行系统更新"
                    android:textColor="@color/gray_font"
                    android:textSize="@dimen/title_levelfour_text_size_14" />
            </LinearLayout>
            <ImageView
	            android:id="@+id/iv_myepei_arrow_message"
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginRight="10dp"
	            android:src="@drawable/arrow_right" />
        </RelativeLayout>

</LinearLayout>
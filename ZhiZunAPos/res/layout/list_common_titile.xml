<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="17dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_list_common_title_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/default_photo"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_list_common_title_teachername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="@dimen/title_levelthree_text_size_16" />
            <TextView
                android:id="@+id/tv_list_common_title_orgname"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_list_common_title_teachername"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_font"
                android:textSize="@dimen/title_levelfour_text_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_list_common_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/gray_font"
                android:textSize="@dimen/title_levelfive_text_size_12" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
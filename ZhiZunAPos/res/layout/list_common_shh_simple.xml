<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ll_list_common_ssh_simple_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/ll_list_common_ssh_simple_share"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_list_common_ssh_simple_collection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/shoucang" />

        <TextView
            android:id="@+id/tv_list_common_ssh_simple_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textColor="@color/darkblue_3"
            android:textSize="@dimen/title_levelthree_text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_common_ssh_simple_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_list_common_ssh_simple_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/fenxiang" />

        <TextView
            android:id="@+id/tv_list_common_ssh_simple_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="@color/darkblue_3"
            android:textSize="@dimen/title_levelthree_text_size_16" />
    </LinearLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_activity_fsdt_teacher_receviers"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/tv_activity_fsdt_teacher_receivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_activity_fsdt_teacher_receivers_count"
            android:layout_toRightOf="@+id/tv_yh_list_title"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray_font"
            android:textSize="@dimen/title_leveltwo_text_size_18" />

        <TextView
            android:id="@+id/tv_activity_fsdt_teacher_receivers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_myepei_arrow_version"
            android:text=""
            android:textColor="@color/gray_font"
            android:textSize="@dimen/title_leveltwo_text_size_18" />

        <ImageView
            android:id="@+id/iv_myepei_arrow_version"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_yh_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="接收人"
            android:textColor="@color/black"
            android:textSize="@dimen/title_leveltwo_text_size_18" />
    </RelativeLayout>

</LinearLayout>
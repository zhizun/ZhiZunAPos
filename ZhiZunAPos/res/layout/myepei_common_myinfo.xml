<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/bg_myepei_myinfo"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/rl_myepei_common_myinfo_rolenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical" >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_rolepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myepei_role" />
        <TextView
            android:id="@+id/tv_myepei_common_myinfo_rolename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="角色"
            android:textSize="@dimen/title_levelfour_text_size_14" />
        <TextView
            android:id="@+id/tv_myepei_common_myinfo_rolenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="@dimen/title_levelthree_text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="@color/myepei_title_divider" />

    <LinearLayout
        android:id="@+id/rl_myepei_common_myinfo_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical" >
        
		<LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_classpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myepei_class" />

        <TextView
            android:id="@+id/banji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="班级"
            android:textSize="@dimen/title_levelfour_text_size_14" />
        
        <TextView
            android:id="@+id/tv_myepei_common_myinfo_classnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="@dimen/title_levelthree_text_size_16"/>
        	</LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="@color/myepei_title_divider"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_messegenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="2"
            android:textSize="@dimen/title_levelthree_text_size_16" />

        <ImageView
            android:id="@+id/tv_myepei_common_myinfo_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/tv_myepei_common_myinfo_messegename"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/tv_myepei_common_myinfo_messegename"
            android:src="@drawable/messege" />

        <TextView
            android:id="@+id/tv_myepei_common_myinfo_messegename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_myepei_common_myinfo_messegenum"
            android:layout_below="@+id/tv_myepei_common_myinfo_messegenum"
            android:text="消息"
            android:textSize="@dimen/title_levelfour_text_size_14" />
    </RelativeLayout>

</LinearLayout>
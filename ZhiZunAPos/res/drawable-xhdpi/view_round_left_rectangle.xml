<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
        <corners android:topLeftRadius="15dp" android:topRightRadius="0dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/darkblue_2"/>
            <stroke android:width="2dp" android:color="@color/darkblue"/>
        </shape></item>
    <item android:state_enabled="false">
        <shape>
        <corners android:topLeftRadius="15dp" android:topRightRadius="0dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/darkblue_2"/>
            <stroke android:width="2dp" android:color="@color/darkblue"/>
        </shape></item>
    <item ><shape >
        <corners android:topLeftRadius="15dp" android:topRightRadius="0dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp"/>
             <gradient android:angle="90" android:endColor="@color/darkblue_btn_gradient_end_1" android:startColor="@color/darkblue_btn_gradient_start_1" />
            <stroke android:width="1dp" android:color="@color/darkblue"/>
        </shape></item>
        
</selector>